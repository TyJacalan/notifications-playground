<%= turbo_frame_tag 'comment_form' do %>
  <%= form_with model: comment do |form| %>
    <div>
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>

    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :post_id, value: post.id %>

    <div>
      <%= form.submit "Comment" %>
    </div>
  <% end %>
<% end %>
<%= turbo_frame_tag "comments_#{dom_id(post)}" do %>
    <div class='flex flex-col gap-2'>
        <% comments.each do |comment | %>
            <%= turbo_frame_tag dom_id(comment) do %>
                <%= render partial: 'comments/comment', locals: { comment: comment } %>
            <% end %>
        <% end %>
    </div>
<% end %>
<div class='h-full w-full flex flex-col gap-4'>
  <% if user_signed_in? %>
    <%= turbo_frame_tag 'post_form' do %>
      <%= render partial: 'form', locals: { post: @post } %>
    <% end %>
  <% end %>

  <div id="posts" class='flex flex-col gap-2'>
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>
</div>